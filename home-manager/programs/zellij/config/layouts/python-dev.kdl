layout {
    new_tab_template {
        pane size=1 borderless=true {
            plugin location="zjstatus"
        }
        pane
    }
    tab name="python dev" {
        pane size=1 borderless=true {
            plugin location="zjstatus"
        }
        pane {
            pane edit="." {
                name "Code"
                size "75%"
            }
            pane command="python" {
                name "Console"
                args "main.py"
                start_suspended true
            }
        }
    }
}
